<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/book_item_height"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/book_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/book_item_side_padding"
            android:paddingLeft="@dimen/book_item_side_padding"
            android:paddingStart="@dimen/book_item_side_padding"
            android:paddingTop="@dimen/book_item_caption_top_padding"
            android:textAppearance="@style/book_list_caption" />

        <TextView
            android:id="@+id/genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/book_item_side_padding"
            android:paddingLeft="@dimen/book_item_side_padding"
            android:paddingStart="@dimen/book_item_side_padding"
            android:paddingTop="@dimen/book_item_genre_top_padding"
            android:textAppearance="@style/book_list_info" />

        <TextView
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/book_item_side_padding"
            android:paddingLeft="@dimen/book_item_side_padding"
            android:paddingStart="@dimen/book_item_side_padding"
            android:paddingTop="@dimen/book_item_author_top_padding"
            android:textAppearance="@style/book_list_info" />
    </LinearLayout>
</android.support.v7.widget.CardView>